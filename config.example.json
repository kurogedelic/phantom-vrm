      "comment": "Or set AZURE_SPEECH_REGION environment variable",
      "voice": "en-US-JennyNeural"
    },
    "api": {
      "url": "",
      "method": "POST",
      "headers": {},
      "body": "{\"text\": {text}}",
      "audioPath": "audio",
      "outputFormat": "mp3"
    },
    "piper": {
      "command": "piper",
      "model": "ja_JP-test-medium"
    },
    "voicevox": {
      "url": "http://localhost:50021",
